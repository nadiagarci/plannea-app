
<%= simple_form_for(@plan) do |f| %>
    <%= f.input :title, placeholder: "What do you want to plan?" %>
    <%= f.input :description, placeholder: "Add a description of your plan", as: :text %>
    <%= f.input :location, placeholder: "City" %>
    <%= f.input :price, placeholder: "How much?" %>


    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>

    <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
