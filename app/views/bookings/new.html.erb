<div class="container">
  <div class="row">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Confirm your plan?</h2>
      <h3><%= @plan.title %></h3>
      <br>
      <br>

      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

      <h5>Pick your date:</h5>
      <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <% end %>
            <%= simple_form_for([@plan, @booking]) do |f| %>
        <div class="form-inputs">
          <%= f.check_box :confirmed %>
          <%= f.button :submit, "Book", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <br>
      </div>

    </div>
  </div>
</div>
